function filterCategory() {
  var item, i, body, spec;
  var selectValue = document.getElementById("categoryDropdown").value;
  item = document.getElementsByClassName("card");
  body = document.getElementsByClassName("card-body");
  var colorSection = document.getElementsByClassName("home-section")[0]; // 홈 섹션에 대한 참조

  for (i = 0; i < item.length; i++) {
    if (selectValue === '전체') {
      $(".home-content span").text("전체 옷장");
      item[i].style.display = "flex";
      colorSection.style.backgroundColor = "white";
    } else {
      if (selectValue === "봄") {
        $(".home-content span").text("봄 옷장");
        colorSection.style.backgroundColor = "pink"; // 봄 선택 시 색상 변경

        // 기타 필요한 작업들...

      } else if (selectValue === "여름") {
        $(".home-content span").text("여름 옷장");
        colorSection.style.backgroundColor = "#96B1D0";
      } else if (selectValue === "가을") {
        $(".home-content span").text("가을 옷장");
        colorSection.style.backgroundColor = "#800020 ";
      } else if (selectValue === "겨울") {
        $(".home-content span").text("겨울 옷장");
        colorSection.style.backgroundColor = "#96B1D0";
      } 

      spec = body[i].getElementsByClassName("card-closet-spec");
      if (spec[0].innerHTML === selectValue) {
        item[i].style.display = "flex";
      } else {
        item[i].style.display = "none";
      }
    }
  }
}

